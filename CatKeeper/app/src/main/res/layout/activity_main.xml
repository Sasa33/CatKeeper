<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tw.training.catkeeper.activity.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_size_200">
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:id="@+id/indicator_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center_horizontal|bottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ui_size_6"
                android:background="@drawable/banner_indicator_selected"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ui_size_6"
                android:background="@drawable/banner_indicator_unselected"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ui_size_6"
                android:background="@drawable/banner_indicator_unselected"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ui_size_6"
                android:background="@drawable/banner_indicator_unselected"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:background="@color/paleGrey"
        android:padding="@dimen/ui_size_28"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/left_tab_btn"
            android:text="@string/cats_nearby"
            android:textSize="@dimen/ui_size_15"
            android:textColor="@color/tab_btn_text_color_selector"
            android:background="@drawable/tab_btn_bg_selector"
            android:layout_weight="1"
            android:layout_width="@dimen/ui_size_180"
            android:layout_height="@dimen/ui_size_26" />
        <Button
            android:id="@+id/right_tab_btn"
            android:text="@string/my_cat"
            android:textSize="@dimen/ui_size_15"
            android:textColor="@color/tab_btn_text_color_selector"
            android:background="@drawable/tab_btn_bg_selector"
            android:layout_weight="1"
            android:layout_width="@dimen/ui_size_180"
            android:layout_height="@dimen/ui_size_26" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />
</LinearLayout>
