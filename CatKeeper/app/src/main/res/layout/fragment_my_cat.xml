<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_above="@+id/suggestion"
        android:layout_centerHorizontal="true"
        android:text="Sorry, you have no cat."
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/suggestion"
        android:layout_marginTop="@dimen/ui_size_10"
        android:layout_centerInParent="true"
        android:text="Want to adopt one from the cloud? Find it from cats nearby."
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <ImageView
        android:layout_alignParentBottom="true"
        android:src="@mipmap/banner_icon_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>