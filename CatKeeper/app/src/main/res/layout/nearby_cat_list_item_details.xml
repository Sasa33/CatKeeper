<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tw.training.catkeeper.activity.DetailsActivity">
    <RelativeLayout
        android:id="@+id/content"
        android:background="@color/paleGrey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/back"
            android:layout_margin="@dimen/ui_size_10"
            android:layout_width="wrap_content"
            android:layout_height="40dp">
            <ImageView
                android:src="@mipmap/back"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <TextView
                android:id="@+id/back_text"
                android:text="Back"
                android:textSize="25sp"
                android:textColor="@color/brightBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/cat_name"
            android:layout_marginTop="@dimen/ui_size_4"
            android:textSize="30sp"
            android:text="name"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/banner"
            android:src="@mipmap/catd"
            android:scaleType="fitXY"
            android:layout_below="@+id/back"
            android:layout_marginTop="@dimen/ui_size_6"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ui_size_200" />

        <TextView
            android:layout_centerHorizontal="true"
            android:textSize="32sp"
            android:textColor="#fff"
            android:layout_above="@+id/avatar_big"
            android:layout_marginBottom="60dp"
            android:text="test..."
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/banner"
            android:layout_marginTop="-60dp"
            android:src="@mipmap/cata"
            android:id="@+id/avatar_big"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <TextView
            android:layout_marginVertical="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/avatar_big"
            android:textSize="18sp"
            android:id="@+id/intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TableLayout
            android:layout_below="@id/intro"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_height="80dp"
            android:layout_width="wrap_content" >
            <TableRow android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon1"
                    android:src="@mipmap/star"
                    android:layout_width="@dimen/ui_size_30"
                    android:layout_height="@dimen/ui_size_30" />
                <ImageView
                    android:layout_alignBottom="@id/icon1"
                    android:src="@mipmap/heart"
                    android:layout_width="@dimen/ui_size_30"
                    android:layout_height="@dimen/ui_size_30" />
                <ImageView
                    android:layout_alignBottom="@id/icon1"
                    android:layout_marginVertical="@dimen/ui_size_4"
                    android:src="@mipmap/fish"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <ImageView
                    android:src="@mipmap/polygon"
                    android:layout_width="@dimen/ui_size_30"
                    android:layout_height="@dimen/ui_size_30" />
            </TableRow>
            <TableRow android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="@dimen/ui_size_10"
                    android:id="@+id/stars"
                    android:text="389 stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="@dimen/ui_size_10"
                    android:text="389 follows"
                    android:id="@+id/follows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="@dimen/ui_size_10"
                    android:text="99 fishes"
                    android:id="@+id/fishes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="@dimen/ui_size_10"
                    android:text="58 adopted"
                    android:id="@+id/adopted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</RelativeLayout>