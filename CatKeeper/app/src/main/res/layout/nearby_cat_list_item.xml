<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/ui_size_210">
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_size_210"
        android:padding="18dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/avatar"
            android:src="@mipmap/catb"
            android:layout_width="@dimen/ui_size_30"
            android:layout_height="@dimen/ui_size_30" />

        <TextView
            android:layout_toRightOf="@+id/avatar"
            android:layout_alignTop="@+id/avatar"
            android:layout_alignBottom="@+id/avatar"
            android:layout_marginStart="13dp"
            android:id="@+id/name"
            android:text="Kitty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/avatar"
            android:layout_alignBottom="@+id/avatar"
            android:text="5 minutes ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="18dp"
            android:layout_marginBottom="19dp"
            android:layout_alignLeft="@+id/name"
            android:layout_below="@+id/name"
            android:id="@+id/description"
            android:text="Posted some new picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/image"
            android:layout_alignLeft="@+id/name"
            android:layout_below="@+id/description"
            android:layout_marginRight="13dp"
            android:src="@mipmap/cata"
            android:layout_width="@dimen/ui_size_100"
            android:layout_height="@dimen/ui_size_100" />
        <ImageView
            android:id="@+id/image2"
            android:layout_toRightOf="@+id/image"
            android:layout_below="@+id/description"
            android:src="@mipmap/catc"
            android:layout_marginRight="13dp"
            android:layout_width="@dimen/ui_size_100"
            android:layout_height="@dimen/ui_size_100" />
        <ImageView
            android:id="@+id/image3"
            android:layout_toRightOf="@+id/image2"
            android:layout_below="@+id/description"
            android:src="@mipmap/catd"
            android:layout_width="@dimen/ui_size_100"
            android:layout_height="@dimen/ui_size_100" />
    </RelativeLayout>
</RelativeLayout>